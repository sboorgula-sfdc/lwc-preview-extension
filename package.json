{
  "name": "lwc-preview",
  "displayName": "LWC Preview",
  "description": "Preview Lightning Web Components in VS Code",
  "version": "0.0.1",
  "publisher": "lwc-preview-dev",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/lwc-preview-ext"
  },
  "license": "MIT",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:html",
    "onLanguage:javascript"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "lwc-preview.togglePreview",
        "title": "Toggle LWC Preview",
        "icon": "$(open-preview)"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "lwc-preview.togglePreview",
          "when": "resourceExtname == .html || resourceExtname == .js || resourceExtname == .css",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/node": "20.10.0",
    "@types/vscode": "1.85.0",
    "@typescript-eslint/eslint-plugin": "6.13.0",
    "@typescript-eslint/parser": "6.13.0",
    "eslint": "8.54.0",
    "typescript": "4.9.5"
  }
}