{
  "name": "lwc-preview",
  "displayName": "LWC Preview",
  "description": "Preview Lightning Web Components in VS Code",
  "version": "0.0.5",
  "publisher": "lwc-preview-dev",
  "repository": {
    "type": "git",
    "url": "https://github.com/sboorgula-sfdc/lwc-preview-extension"
  },
  "license": "MIT",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:html",
    "onLanguage:javascript"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "lwc-preview.togglePreview",
        "title": "Toggle LWC Preview",
        "icon": "$(open-preview)"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "lwc-preview.togglePreview",
          "when": "resourceExtname == .html || resourceExtname == .js || resourceExtname == .css",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "LWC Preview",
      "properties": {
        "lwc-preview.autoOpenPreview": {
          "type": "boolean",
          "default": true,
          "description": "Automatically open preview panel when switching to LWC component files. When disabled, preview only opens when clicking the preview icon."
        }
      }
    }
  },
  "scripts": {
    "init": "cd lwr-base-project && npm ci && cd .. && npm ci",
    "vscode:prepublish": "npm run build:zip && npm run compile",
    "vscode:package": "npm run vscode:prepublish && npm version patch && vsce package",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "build:zip": "node scripts/zipLwrBaseProject.js"
  },
  "dependencies": {
    "adm-zip": "0.5.10"
  },
  "devDependencies": {
    "@types/node": "20.10.0",
    "@types/vscode": "1.85.0",
    "@typescript-eslint/eslint-plugin": "6.13.0",
    "@typescript-eslint/parser": "6.13.0",
    "eslint": "8.54.0",
    "typescript": "4.9.5"
  }
}
